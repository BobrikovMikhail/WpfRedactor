<Window x:Class="GraphicEditor.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GraphicEditor"
        mc:Ignorable="d"
        Title="Задание глубины" Height="204" Width="418" WindowStartupLocation="CenterOwner">
    <Grid Margin="0,0,0,-6">
        <TextBlock Text="Введите значение глубины" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10" />
        <TextBox x:Name="ZValueTextBox" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10">
            <Button Content="OK" Width="80" Margin="5" Click="OkButtonClick" />
            <Button Content="Отмена" Width="80" Margin="5" Click="CancelButtonClick" />
        </StackPanel>
    </Grid>
</Window>
